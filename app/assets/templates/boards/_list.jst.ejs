<div class="list-item col-xs-3 col-xs-offset-1">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h4>
        <%= list.escape('title') %>
        <button type="button" class="close remove-list" data-id="<%= list.id %>">&times;</button>
      </h4>
    </div>
    <div class="panel-body">
      <div class="cards">
        <ul class="list-cards">
          <% cards.each(function(card) { %>
            <li class="card">
              <%= card.escape('title') %>
              <a class="remove-card btn btn-xs" data-id="<%= card.escape('id') %>">&times;</a>
            </li>
          <% }) %>
        </ul>
        <div id='new-card'></div>
      </div>
      <a id="add-card" class="btn btn-info btn-sm"><%= buttonText %></a>
    </div>
  </div>
</div>
